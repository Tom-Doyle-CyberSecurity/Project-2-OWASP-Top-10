{
    "name": "WebApp (Juice Shop) Pentest env (Docker)",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features":  {
        "ghcr.io/devcontainers/features/docker-in-docker": {}

    },
    "postCreateCommand": "pip install -r requirements.txt && docker compose up -d",
    "postStartCommand": "docker compose up -d",
    "remoteEnv": {
        "DOCKER_BUILDKIT": "1"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "forwardPorts": [3000, 8000],
    "portsAttributes": {
        "3000": { "label": "Juice Shop", "onAutoForward": "openBrowser"},
        "8000": { "label": "ZAP API", "onAutoForward": "notify"}
    }
}
